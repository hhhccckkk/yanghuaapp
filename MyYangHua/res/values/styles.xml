<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/update_view_bg_shap</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->

    </style>

    <style name="alert_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="home_menu_tex_size">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/cebian_ziti_color</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>

    <style name="main_radio_botton">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:gravity">bottom</item>
        <!-- 让dadiobutton不显示那个button -->
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/main_top</item>
        <item name="android:textSize">12sp</item>
        <!-- 让3个button一样大小 -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_buttom_text_color</item>
    </style>
    
    
    
    <style name="baike_text_style">
        <item name="android:paddingTop">15dp</item>
        <item name="android:gravity">center</item>
        <!-- 让dadiobutton不显示那个button -->
        <item name="android:textSize">14sp</item>
        <!-- 让3个button一样大小 -->
        <item name="android:textColor">#747474</item>
    </style>
    
