<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilt"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/one_user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_img" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/one_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="老科"
                android:textColor="#363636"
                android:textSize="16sp" />
             <ImageView 
                 android:id="@+id/one_user_xingbei"
                 android:paddingTop="12dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="3dp"
                 android:layout_toRightOf="@+id/one_user_name"
                 android:src="@drawable/nan"
                 />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/one_user_name"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/one_user_dengji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="等级: 10级"
                    android:textColor="@color/text_color999"
                    android:textSize="12sp" />

                <TextView
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:id="@+id/one_user_address"
                    android:textColor="@color/text_color999"
                    android:textSize="12sp" />
            </LinearLayout>


            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/liaotian_btn_selector"
                android:padding="5dp"
                android:text="关注"
                android:textColor="@color/whilt"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/one_user_qianming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="他很懒 暂时没有个性签名"
        android:textColor="@color/text_color333"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="#f8f6f7" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="她的粉丝"
                    android:textColor="@color/text_color333"
                    android:textSize="16sp" />

                <TextView
                     android:id="@+id/one_user_fensi"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/right_jiantou"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="766"
                    android:textColor="@color/text_color666"
                    android:textSize="14sp" />
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="他关注的人"
                    android:textColor="@color/text_color333"
                    android:textSize="16sp" />

                <TextView
                     android:id="@+id/one_user_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/right_jiantou"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="766"
                    android:textColor="@color/text_color666"
                    android:textSize="14sp" />
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="他的动态"
                    android:textColor="@color/text_color333"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/right_jiantou" />
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color" />
        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/user_liaotian"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/liaotian_btn_selector"
            android:gravity="center"
            android:textColor="@color/whilt"
            android:text="聊天"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>