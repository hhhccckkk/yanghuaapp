<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@color/title_color"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/title_left_bt_selector"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:src="@drawable/title_left_bt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/home_title_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/home_title_bt_shap"
                android:gravity="center"
                android:maxHeight="30dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/red_anniu_bt_color"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/home_title_center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:maxHeight="30dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/whilt"
                    android:textSize="16sp" />

                <ImageView
                    android:visibility="gone"
                     android:id="@+id/title_tongzhi_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_tail_statusbar_dot" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/title_right_fr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/home_title_right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:maxHeight="30dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/whilt"
                    android:textSize="16sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/title_guanzhu_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_tail_statusbar_dot" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>