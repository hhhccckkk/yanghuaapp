<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/huitie_lay"
            android:background="@color/whilt"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/huifu_touxiang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/default_img" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/huifu_userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color666"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/huifu_xingbie"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/biaoqian_shap"
                                    android:paddingBottom="1dp"
                                    android:paddingLeft="2dp"
                                    android:paddingRight="2dp"
                                    android:paddingTop="1dp"
                                    android:text="LV.10"
                                    android:textColor="@color/whilt"
                                    android:textSize="8sp" />
                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="学前班"
                                        android:textColor="@color/text_color999"
                                        android:textSize="10sp" />

                                    <TextView
                                        android:id="@+id/huifu_fensi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text_color999"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/huifu_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right|center_vertical"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/text_color999"
                                    android:textSize="10sp" />
                            </FrameLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/huifu_yuantie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/yuantie_shap"
                        android:gravity="center"
                        android:padding="15dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/text_color999"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/huifu_content"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/text_color333"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/huifu_img1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/huifu_img2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/huifu_img3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:id="@+id/huifu_address_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/icon_activity_lbs" />

                        <TextView
                            android:id="@+id/huifu_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/text_color999"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/line_color" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/huitie_lay"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            
            android:background="#f1f1f1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:onClick="showPopChiceImage"
                android:src="@drawable/biaoqing" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <com.hck.yanghua.view.MyEditextView
                    android:id="@+id/huihu_huifu"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/huifu_add_huifu"
                    android:background="@drawable/huifu_huise_shap"
                    android:paddingLeft="3dp"
                    android:textColor="@color/text_color666"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/huifu_add_huifu"
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/huifu_huise_shap"
                    android:gravity="center"
                    android:onClick="huifu"
                    android:text="回复"
                    android:textColor="#abaeb3"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:id="@+id/huifu_view"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="3dp" >
        </View>
    </LinearLayout>

</RelativeLayout>